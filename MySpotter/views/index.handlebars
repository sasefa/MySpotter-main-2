<div class="row justify-content-center">
    <div class="col-8 mt-5 text-center">
        <h1>Welcome to MySpotter!</h1>
        <h3>My Workouts</h3>
    </div>
    <div class="col-8 text-right mb-3">
        <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#createWorkoutModal">
            Create New Workout
        </button>
    </div>

    <div class="row justify-content-center">
     {{#each workouts}}
    <a href="/workouts/{{id}}" class="col-md-4 mb-4 text-decoration-none text-dark">
        <div class="card shadow-sm rounded">
            <div class="card-body text-center">
                <h5 class="card-title">{{name}}</h5>
                {{#if user}}
                    <p class="card-text"><small>Created by: {{user.username}}</small></p>
                {{else}}
                    <p class="card-text"><small>Created by: Unknown User</small></p>
                {{/if}}
            </div>
                            <div class="card-footer d-flex justify-content-between">
                    <button class="btn btn-outline-secondary btn-sm" onclick="editWorkout({{id}})">Edit</button>
                    <button class="btn btn-outline-danger btn-sm" onclick="deleteWorkout({{id}})">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </div>
        </div>
    </a>
{{/each}}
    </div>
</div>

<!-- Create Workout Modal -->
<div class="modal fade" id="createWorkoutModal" tabindex="-1" aria-labelledby="createWorkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createWorkoutModalLabel">Create New Workout</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="new-workout-form" method="POST">
                    <div class="mb-3">
                        <label for="workout-name" class="form-label">Workout Name</label>
                        <input id="workout-name" type="text" name="name" class="form-control" placeholder="Workout Name" required>
                    </div>
                    <button type="submit" class="btn btn-outline-dark" data-bs-dismiss="modal">
                        Create
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/workout-actions.js"></script>
<script src="/js/add-workout.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>







