<body>
    <main>
        <div class="row justify-content-center">
   {{#if workouts}}
     {{#each workouts}}
    <a href="/workouts/{{id}}" class="col-md-4 mb-4 text-decoration-none text-dark">
        <div class="card shadow-sm rounded">
            <div class="card-body text-center">
                <h5 class="card-title">{{name}}</h5>
                {{#if user}}
                    <p class="card-text"><small>Created by: {{user.username}}</small></p>
                {{else}}
                    <p class="card-text"><small>Created by: Unknown User</small></p>
                {{/if}}
            </div>
                            <div class="card-footer d-flex justify-content-between">
                    <button class="btn btn-outline-secondary btn-sm" onclick="editWorkout({{id}})">Edit</button>
                    <button class="btn btn-outline-danger btn-sm" onclick="deleteWorkout({{id}})">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </div>
        </div>
    </a>
     {{/each}}
{{else}}
  <p>No Workouts Found</p>
  {{/if}}
    </div>
    </main>

    <footer>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script> 
        <script src="/MySpotter/controllers/workoutController.js"></script>
    </footer>
</body>

